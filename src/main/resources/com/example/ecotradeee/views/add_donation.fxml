<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.AddDonationController"
            prefWidth="400" prefHeight="400">
    <VBox spacing="15" alignment="CENTER" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <Label text="Add Donation" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

        <TextField fx:id="donorNameField" promptText="Donor Name" maxWidth="300"/>
        <TextField fx:id="amountField" promptText="Amount" maxWidth="300"/>
        <DatePicker fx:id="datePicker" promptText="Donation Date" maxWidth="300"/>
        <TextArea fx:id="messageArea" promptText="Message (optional)" prefRowCount="4" maxWidth="300"/>

        <Button text="Add Donation" onAction="#handleAddDonation" maxWidth="150"/>
    </VBox>
</AnchorPane>
